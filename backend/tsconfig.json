{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,               // 엄격한 타입 체크 해제 (TS7006, TS18046 해결)
    "noImplicitAny": false,        // 매개변수 any 타입 허용
    "skipLibCheck": true,          // 외부 라이브러리 타입 체크 건너뛰기
    "esModuleInterop": true,
    "verbatimModuleSyntax": false  // ESM/CJS 문법 혼용 에러 방지
  },
  "include": ["src/**/*"]
}
